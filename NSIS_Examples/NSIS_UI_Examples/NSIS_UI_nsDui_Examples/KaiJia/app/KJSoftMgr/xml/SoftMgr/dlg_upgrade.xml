<?xml version="1.0" encoding="utf-8"?>
<dlg title="" width="360" height="500" translucent="255"
	frame="" bkimg="" crbk="" appwin="0" resize="0" topmost="1"
	img-shadow="skins\upgrade\shadow.png" shadow-wlt="5" shadow-hlt="3" shadow-wrb="5" shadow-hrb="7">

  <base>
    <button name="button.exit_upgrade" pos="-24,0" width="24" height="24" image="skins\upgrade\bt_close.png" showfocus="0" cursor="hand" />
  </base>

  <body>
    <text pos="32,6,200,30" crtext="FFFFFF" font="big14" title="" response="0" />

    <animateimg name="ani.scanning" pos="90,90" img-count="18" image="skins\upgrade\scanning.png" width="175" height="175" index="0" maxindex="18" timer-count="2" run="true" />
    <div name="div.checking_version" pos="0,310,-0,460">
      <text name="text.loading_tips" pos="0,0,-0,80" crtext="333333" align="center" valign="middle" font="big23" title="获取新版本中..." response="0" />
      <text pos="15,95,-0,120" crtext="999999" crmark="2EA3E6" font="default" title="您还可前往铠甲安全卫士官网安装最新版本，享受最优体验。" mask="铠甲安全卫士官网" response="0" />
    </div>

    <img name="img.icon" pos="130,100" width="100" height="100" image="skins\upgrade\icon_yes.png" mode="normal" response="0" />
    <text name="text.upgrade_tips" pos="0,220,-0,280" crtext="FFFFFF" align="center" valign="middle" font="big30" title="发现新版本" response="0" />
    <div name="div.new_version" pos="0,310,-0,460">
      <img pos="15,20" width="330" height="110" image="skins\upgrade\border.png" mode="normal" response="0" />
      <text name="text.upgrade_log" pos="50,25,-20,-25" crtext="666666" img-scroll="skin:IDB_SCROLL_V" title="" />
    </div>

    <text name="text.lastest_version" pos="0,350,-0,420" crtext="999999" align="center" valign="middle" title="您的版本已是最新版，无需更新。" />

    <text name="text.network_error" pos="10,340,-0,375" crtext="999999" align="center" valign="middle" title="网络未连接或者繁忙，请稍微再试。" />
    <button name="button.retry" pos="130,385" width="100" height="35" img-count="4" image="skins\upgrade\bt_retry.png" showfocus="0" cursor="hand" />

    <progress name="progress.upgrading" pos="15,-25,-100,-18" image="skins\upgrade\progress.png" show-text="0" value="0" timer-count="3" run="false" />
    <text name="text.current_version" pos="15,-40,-100,-0" crtext="666666" align="left" valign="middle" font="default" title="当前版本：旗舰版（10.4.1）" response="1" />
    <button name="button.upgrade" pos="-80,-34" width="70" height="25" img-count="4" image="skins\upgrade\bt_cancel.png" showfocus="0" cursor="hand" />
  </body>

</dlg>
